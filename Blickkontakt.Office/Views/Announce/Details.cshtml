<section class="content">

    <div class="row row-margin justify-content-end">

        @if ((int)Model.Data.Status == 0)
        {
            <div class="col-auto">
                <a href="../../prepare/@Model.Data.Number/" class="btn btn-block btn-outline-primary">Vorbereitet</a>
            </div>
        }

        <div class="col-auto">
            <a href="../../edit/@Model.Data.Number/" class="btn btn-block btn-outline-primary">Bearbeiten</a>
        </div>

    </div>

    <div class="row">

        <div class="col-md-6">

            <div class="card">

                <div class="card-header">
                    <h3 class="card-title">Allgemein</h3>
                </div>

                <div class="card-body">

                    <div class="form-group row">
                        <label for="number" class="col-sm-2 col-form-label">Kunde</label>
                        <div class="col-sm-10 form-control">
                            <a href="/customers/details/@Model.Data.Customer.Number/">
                                @Model.Data.Customer.Title
                                @Model.Data.Customer.FirstName
                                @Model.Data.Customer.Name
                            </a>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="status" class="col-sm-2 col-form-label">Status</label>
                        <div class="col-sm-10 form-control">
                            @{
                                switch ((int)Model.Data.Status)
                                {
                                    case 0:
                                        <span class="badge badge-info">Neu</span>
                                        break;
                                    case 1:
                                        <span class="badge badge-primary">Vorbereitet</span>
                                        break;
                                    case 2:
                                        <span class="badge badge-success">Veröffentlicht</span>
                                        break;
                                    case 3:
                                        <span class="badge badge-secondary">Ausgelaufen</span>
                                        break;
                                    case 4:
                                        <span class="badge badge-warning">Zurückgezogen</span>
                                        break;
                                }
                            }
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="notes" class="col-sm-2 col-form-label">Notizen</label>
                        <div class="col-sm-10 form-control">@Model.Data.Notes</div>
                    </div>

                </div>

            </div>

        </div>

        <div class="col-md-6">

            <div class="card">

                <div class="card-header">
                    <h3 class="card-title">Anzeigentext</h3>
                </div>

                <div class="card-body">

                    <blockquote class="quote-secondary">
                        <p style="font-weight: bold">@Model.Data.Number &nbsp;&nbsp; @Model.Data.Title</p>
                        <p>@Model.Data.Message</p>
                    </blockquote>

                </div>

            </div>

        </div>

    </div>

</section>

