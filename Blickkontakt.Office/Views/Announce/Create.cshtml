<section class="content">

    <form id="editor" method="post" action=".">

        <div class="row row-margin">

            <div class="col-md-6">

                <div class="card">

                    <div class="card-header">
                        <h3 class="card-title">Allgemein</h3>
                    </div>

                    <div class="card-body">

                        <div class="form-group row">
                            <label for="number" class="col-sm-2 col-form-label">Kunde</label>
                            <div class="col-sm-10">
                                <div class="form-control">
                                    @Model.Data.Title
                                    @Model.Data.FirstName
                                    @Model.Data.Name
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="notes" class="col-sm-2 col-form-label">Notiz</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="notes" name="notes" placeholder="Notizen zur Anzeige" rows="8"></textarea>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

            <div class="col-md-6">

                <div class="card">

                    <div class="card-header">
                        <h3 class="card-title">Anzeige (Entwurf)</h3>
                    </div>

                    <div class="card-body">

                        <div class="form-group row">
                            <label for="title" class="col-sm-2 col-form-label">Titel</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="title" name="title" placeholder="Schachspieler gesucht!">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="message" class="col-sm-2 col-form-label">Text</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="message" name="message" placeholder="Geistig jung gebliebener Schachspieler (76), sucht ..." rows="8"></textarea>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>

        <div class="row justify-content-end">

            <div class="col-auto">
                <button class="btn btn-block btn-primary">Speichern</button>
            </div>

            <div class="col-auto">
                <a href="../../customers/details/@Model.Data.Number/" class="btn btn-block btn-outline-primary">Abbrechen</a>
            </div>

        </div>

    </form>

</section>
