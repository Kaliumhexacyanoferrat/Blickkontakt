
<section class="content">

    <div class="row justify-content-between">

        <div class="col-2">
            <input type="search" class="form-control form-control-sm" placeholder="">
        </div>

        <div class="col-2">
            <a href="@Model.Route("create/")" class="btn btn-block btn-outline-primary">Kunden anlegen</a>
        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <div class="card">

                <div class="card-body">

                    <div class="row">
                        <div class="col-sm-12">
                            <table id="customers" class="table table-bordered table-striped dataTable" role="grid">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc">Lfd. Nummer</th>
                                        <th>Name</th>
                                        <th>Vorname</th>
                                        <th>E-Mail</th>
                                        <th>Telefon</th>
                                        <th>Ort</th>
                                        <th>Erstellt</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model.Data.Records)
                                    {
                                        <tr role="row" class="odd record" data-id="@c.Number" style="cursor: pointer;">
                                            <td>@c.Number</td>
                                            <td>@c.Name</td>
                                            <td>@c.FirstName</td>
                                            <td>@c.Mail</td>
                                            <td>@c.Phone</td>
                                            <td>@c.City</td>
                                            <td>@c.Created.ToLocalTime()</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Lfd. Nummer</th>
                                        <th>Name</th>
                                        <th>Vorname</th>
                                        <th>E-Mail</th>
                                        <th>Telefon</th>
                                        <th>Ort</th>
                                        <th>Erstellt</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <div class="row justify-content-between">

                        <div class="col-auto">
                            <div class="dataTables_info" id="customers_info" role="status">@Model.Data.Total Einträge gesamt.</div>
                        </div>

                        <div class="col-auto">

                            <div class="dataTables_paginate paging_simple_numbers" id="customers_paginate">

                                <ul class="pagination">

                                    @if (Model.Data.CurrentPage > 1)
                                    {
                                        <li class="paginate_button page-item previous" id="customers_previous"><a href=".?page=@(Model.Data.CurrentPage - 1)" class="page-link">Previous</a></li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button page-item previous disabled" id="customers_previous"><a href="#" class="page-link">Previous</a></li>
                                    }

                                    @for (int i = Model.Data.CurrentPage - 3; i < Model.Data.CurrentPage; i++)
                                    {
                                        @if (i >= 1)
                                        {
                                            <li class="paginate_button page-item "><a href="./?page=@i" tabindex="0" class="page-link">@i</a></li>
                                        }
                                    }

                                    <li class="paginate_button page-item active"><a href="#" class="page-link">@Model.Data.CurrentPage</a></li>

                                    @for (int i = Model.Data.CurrentPage + 1; i < Model.Data.CurrentPage + 3; i++)
                                    {
                                        @if (i <= Model.Data.PageCount)
                                        {
                                            <li class="paginate_button page-item "><a href="./?page=@i" class="page-link">@i</a></li>
                                        }
                                    }

                                    @if (Model.Data.CurrentPage + 1 <= Model.Data.PageCount)
                                    {
                                        <li class="paginate_button page-item next" id="customers_next"><a href="./?page=@(Model.Data.CurrentPage + 1)" class="page-link">Next</a></li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button page-item next disabled" id="customers_next"><a href="#" class="page-link">Next</a></li>
                                    }
                                </ul>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</section>


<script>

    window.addEventListener("load", function() {

        $(".record").click(function () {
            window.location = "./details/" + $(this).data("id") + "/";
        });

    });

</script>

