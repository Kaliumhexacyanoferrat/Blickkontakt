
<section class="content">

    <div class="row">

        <div class="col-12">

            <div class="card">


                <div class="card-body">
                    <div class="dataTables_wrapper dt-bootstrap4">

                        <div class="row justify-content-between">

                            <div class="col-2">
                                <input type="search" class="form-control form-control-sm" placeholder="" aria-controls="customers">
                            </div>

                            <div class="col-2">
                                <button type="button" class="btn btn-block btn-outline-primary">Kunden anlegen</button>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <table id="customers" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="customers_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="customers" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 203.4px;">Lfd. Nummer</th>
                                            <th class="sorting" tabindex="0" aria-controls="customers" rowspan="1" colspan="1" aria-label="Nachname: activate to sort column ascending" style="width: 262.6px;">Nachname</th>
                                            <th class="sorting" tabindex="0" aria-controls="customers" rowspan="1" colspan="1" aria-label="Vorname: activate to sort column ascending" style="width: 233px;">Vorname</th>
                                            <th class="sorting" tabindex="0" aria-controls="customers" rowspan="1" colspan="1" aria-label="Erstellt: activate to sort column ascending" style="width: 174.6px;">Erstellt</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model.Data)
                                        {
                                            <tr role="row" class="odd">
                                                <td class="sorting_1">@c.ID</td>
                                                <td>@c.LastName</td>
                                                <td>@c.FirstName</td>
                                                <td>@c.Created</td>
                                                <td>A</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th rowspan="1" colspan="1">Lfd. Nummer</th>
                                            <th rowspan="1" colspan="1">Nachname</th>
                                            <th rowspan="1" colspan="1">Vorname</th>
                                            <th rowspan="1" colspan="1">Erstellt</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-5">
                                <div class="dataTables_info" id="customers_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
                            </div>
                            <div class="col-sm-12 col-md-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="customers_paginate">
                                    <ul class="pagination">
                                        <li class="paginate_button page-item previous disabled" id="customers_previous"><a href="#" aria-controls="customers" data-dt-idx="0" tabindex="0" class="page-link">Previous</a></li>
                                        <li class="paginate_button page-item active"><a href="#" aria-controls="customers" data-dt-idx="1" tabindex="0" class="page-link">1</a></li>
                                        <li class="paginate_button page-item "><a href="#" aria-controls="customers" data-dt-idx="2" tabindex="0" class="page-link">2</a></li>
                                        <li class="paginate_button page-item "><a href="#" aria-controls="customers" data-dt-idx="3" tabindex="0" class="page-link">3</a></li>
                                        <li class="paginate_button page-item "><a href="#" aria-controls="customers" data-dt-idx="4" tabindex="0" class="page-link">4</a></li>
                                        <li class="paginate_button page-item "><a href="#" aria-controls="customers" data-dt-idx="5" tabindex="0" class="page-link">5</a></li>
                                        <li class="paginate_button page-item "><a href="#" aria-controls="customers" data-dt-idx="6" tabindex="0" class="page-link">6</a></li>
                                        <li class="paginate_button page-item next" id="customers_next"><a href="#" aria-controls="customers" data-dt-idx="7" tabindex="0" class="page-link">Next</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>


        </div>

    </div>

</section>

